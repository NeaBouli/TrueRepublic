@page "/"

<MudPaper Height=@Height Width="100%">
    <MudContainer Fixed="true">
        <MudText Typo="Typo.h5">Hello, world!</MudText>
        <MudText>Welcome to your new app.</MudText>

        @if (ShowAddUserWizard)
        {
            <MudText>&nbsp;</MudText>
            <UserAddWizard ExternalUserId="@ExternalUserId" />
        }

        @if (!string.IsNullOrEmpty(UserEMail))
        {
            <MudText>&nbsp;</MudText>
            <MudText>@UserName</MudText>
            <MudText>@UserEMail</MudText>
            <MudText>@ExternalUserId</MudText>
        }
    </MudContainer>
</MudPaper>
