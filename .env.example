# ============================================================
# TrueRepublic Node Configuration
# ============================================================
# Copy this file to .env and customize for your deployment.

# Chain identity
CHAIN_ID=truerepublic-1
MONIKER=my-truerepublic-node

# Network peers
SEEDS=
PERSISTENT_PEERS=

# Gas
MIN_GAS_PRICE=0.001pnyx

# Ports (change if running multiple nodes on same host)
P2P_PORT=26656
RPC_PORT=26657
LCD_PORT=1317
GRPC_PORT=9090

# Prometheus
PROMETHEUS_ENABLED=true

# Web wallet RPC endpoint (used by web-wallet container)
RPC_URL=http://truerepublic-node:26657

# Grafana
GRAFANA_PASSWORD=admin
