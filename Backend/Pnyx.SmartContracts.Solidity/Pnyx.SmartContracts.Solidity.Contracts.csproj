<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
      <TargetFramework>net6.0</TargetFramework>
      <ImplicitUsings>enable</ImplicitUsings>
      <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Nethereum.Web3" Version="4.*" />
        <PackageReference Include="System.Configuration.ConfigurationManager" Version="7.0.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Pnyx.ApiClient.Core\Pnyx.ApiClient.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Pnyx.SmartContracts.Solidity.Contracts.Designer.cs">
        <DesignTimeSharedInput>True</DesignTimeSharedInput>
        <AutoGen>True</AutoGen>
        <DependentUpon>Pnyx.SmartContracts.Solidity.Contracts.settings</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <None Update="Pnyx.SmartContracts.Solidity.Contracts.settings">
        <Generator>SettingsSingleFileGenerator</Generator>
        <LastGenOutput>Pnyx.SmartContracts.Solidity.Contracts.Designer.cs</LastGenOutput>
      </None>
    </ItemGroup>
    
</Project>